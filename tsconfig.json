{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@interfaces/*": ["types/*"],
      "@config": ["config/index"],
      "@client/*": ["client/*"],
      "@errors/*": ["errors/*"],
      "@utils/*": ["utils/*"]
    }
  }
}
