{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@interfaces/*": ["types/*"],
      "@config": ["config/index"],
      "@client/*": ["client/*"],
      "@errors/*": ["errors/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*ts"]
}
